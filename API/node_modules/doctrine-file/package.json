{
  "name": "doctrine-file",
  "version": "1.0.3",
  "description": "File-Reader for the Doctrine JSDoc Parser",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "cross-env BABEL_ENV=production BABEL_OUTPUT=cjs babel src --out-dir lib --ignore __tests__",
    "flow": "flow",
    "format": "prettier --write --trailing-comma all --single-quote \"src/**/*.js\"",
    "lint": "eslint src",
    "precommit": "npm test && lint-staged",
    "preversion": "npm test",
    "prepublish": "npm run clean && npm run build",
    "test": "npm run lint && npm run flow && npm run test-only",
    "test-only": "jest --collectCoverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/researchgate/doctrine-file.git"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "doctrine",
    "jsdoc",
    "parser"
  ],
  "author": "Daniel Tschinder <daniel@tschinder.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/researchgate/doctrine-file/issues"
  },
  "homepage": "https://github.com/researchgate/doctrine-file#readme",
  "devDependencies": {
    "@researchgate/babel-preset-rg": "^1.0.1",
    "@researchgate/eslint-config-rg-node-babel": "^1.0.1",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.0.2",
    "cross-env": "^5.0.5",
    "eslint": "^4.10.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-prettier": "^2.3.0",
    "flow-bin": "^0.59.0",
    "husky": "^0.14.3",
    "jest": "^21.0.2",
    "lint-staged": "^4.0.2",
    "prettier": "^1.6.1",
    "rimraf": "^2.5.0"
  },
  "dependencies": {
    "doctrine": "^2.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__tests__/**/*"
    ],
    "coverageReporters": [
      "text",
      "json"
    ],
    "roots": [
      "<rootDir>/src/"
    ]
  }
}
